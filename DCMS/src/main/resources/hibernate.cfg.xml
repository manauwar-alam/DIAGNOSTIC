<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/lifecare</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="com/manauwar/dcms/pojo/hibernate/PersonalDetail.hbm.xml"/>
    <mapping resource="com/manauwar/dcms/pojo/hibernate/Users.hbm.xml"/>
    <mapping resource="com/manauwar/dcms/pojo/hibernate/MedicalExamination.hbm.xml"/>
    <mapping resource="com/manauwar/dcms/pojo/hibernate/LaboratoryInvestigation.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
